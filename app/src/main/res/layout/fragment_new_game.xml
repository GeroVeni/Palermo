<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gotham_gr_bold"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_new_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_test_edit_title_background"
        android:ems="10"
        android:fontFamily="@font/gotham_gr_book"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="AlexGame" />

    <EditText
        android:id="@+id/fragment_new_game_player_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/test_player_number_background"
        android:ems="10"
        android:fontFamily="@font/gotham_gr_medium"
        android:gravity="center"
        android:inputType="number"
        android:textAllCaps="false"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_new_game_decrease_button"
        app:layout_constraintEnd_toStartOf="@+id/fragment_new_game_increase_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_new_game_decrease_button"
        app:layout_constraintTop_toTopOf="@+id/fragment_new_game_decrease_button"
        tools:text="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gotham_gr_bold"
        android:text="Player Number"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_new_game_title" />

    <ImageView
        android:id="@+id/fragment_new_game_create_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/test_create_button_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_new_game_player_count"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/fragment_new_game_increase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_new_game_player_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_new_game_player_count"
        app:layout_constraintTop_toTopOf="@+id/fragment_new_game_player_count"
        app:srcCompat="@drawable/test_player_number_arrow_right" />

    <ImageView
        android:id="@+id/fragment_new_game_decrease_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_new_game_player_count"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/test_player_number_arrow_left" />
</android.support.constraint.ConstraintLayout>