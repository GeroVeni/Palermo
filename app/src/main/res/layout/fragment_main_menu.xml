<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/main_menu_intro_animation_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/main_menu_background_video_cont_desc" />

    <ImageView
        android:id="@+id/main_menu_side_menu_button"
        android:contentDescription="@string/side_menu_button_cont_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/options_lines" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_menu_play_menu_pager"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:background="@drawable/wall">

    </android.support.v4.view.ViewPager>

</FrameLayout>