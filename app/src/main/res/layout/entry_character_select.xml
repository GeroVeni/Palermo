<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/entry_character_select_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/gotham_gr_book"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Policeman" />

    <TextView
        android:id="@+id/entry_character_select_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_gr_bold"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/entry_character_select_name"
        app:layout_constraintEnd_toStartOf="@+id/entry_character_select_increase"
        app:layout_constraintTop_toTopOf="@+id/entry_character_select_name"
        tools:text="5" />

    <ImageView
        android:id="@+id/entry_character_select_decrease"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/entry_character_select_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/entry_character_select_left_arrow" />

    <ImageView
        android:id="@+id/entry_character_select_increase"
        android:layout_width="26dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/entry_character_select_right_arrow" />

</android.support.constraint.ConstraintLayout>